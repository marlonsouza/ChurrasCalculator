<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/consumoMedioLinguica"
        android:text="@string/consumoMedio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/linguica_label"
        android:text="@string/linguicaLabel"
        android:layout_below="@id/consumoMedioLinguica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/linguica"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/enviar_linguica"
        android:text="@string/proximo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>